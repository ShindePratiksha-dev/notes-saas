// Prisma client generator
generator client {
  provider = "prisma-client-js"
}

// Database connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tenant model
model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  plan      Plan     @default(FREE) // FREE or PRO
  users     User[]
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// User model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Note model
model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Enums
enum Role {
  ADMIN
  MEMBER
}

enum Plan {
  FREE
  PRO
}
